{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true, // Aciona os elementos da font Fira-code para mostrar caracteres especiais
    "editor.fontSize": 14, // Tamanho da fonte do editor de texto
    "editor.tabSize": 2, // Aplica um espaçamento de 2 da esquerda para direita ao pressionar a tecla tab
    "editor.rulers": [ // Linhas verticais que indicam a ultrapassagem do texto 
        100,
        128
    ],
    // Permite acionar as configurações do ESlint(padronizador)
    "eslint.autoFixOnSave": true, // Está funcionando porém este comando está depreciado 
    "editor.formatOnSave": false,    
    "eslint.validate": [
        "html",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "editor.renderLineHighlight": "gutter", // Aplica um sinal visual na esquerda da linha selecionada
    "terminal.integrated.fontSize": 14, // Aumenta a fonte do terminal
    "workbench.iconTheme": "material-icon-theme", // Exibe ícones representativos da tecnologia no arquivo
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },
    "javascript.updateImportsOnFileMove.enabled": "never",
    "editor.parameterHints.enabled": false,
    "breadcrumbs.enabled": true,
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "terminal.integrated.shell.linux": "/bin/bash",
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Dracula", // Tema show de bola 
    "liveServer.settings.donotShowInfoMsg": true, // Abre o arquivo no browser direto pelo porta do servidor local 
    "git.autofetch": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    "material-icon-theme.folders.associations": {
        "infra": "app",
        "entities": "class",
        "domain": "class",
        "schemas": "class",
        "tyorm": "database",
        "repositories": "mappings",
        "http": "container",
        "migrations": "tools",
        "modules": "components",
        "implementations": "core",
        "dtos": "typescript",
        "fakes": "mock",
        "websockets": "pipe",
        "protos": "pipe",
        "grpc": "pipe",
        "providers": "include",
        "subscribers": "messages",
        "useCases": "controller",
        "mappers": "meta",
        "_shared": "shared",
        "eslint-config": "tools",
    }
}
